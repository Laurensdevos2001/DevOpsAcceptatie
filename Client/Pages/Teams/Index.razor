@page "/team"
@using Components
@using Oogarts.Client.Shared.TeamComponents

<PageTitle>Oogcentrum Vision</PageTitle>


    <div class="container mx-auto px-20 min-h-[calc(100vh-100px)] flex flex-col items-center">

        <div class="flex flex-col items-center pt-16 w-full">
            <h1 class="text-[#00284F] text-[36px] font-bold">Maak kennis met onze praktijk</h1>
            <img src="divider.png" class="w-[56px] h-[8px]"/>
            <p class="font-medium text-[13px] text-center w-[815px] pt-3">Ontdek de expertise en toewijding van ons ervaren team bij VISION oogcentrum. Met passie voor oogzorg en jarenlange ervaring streven we ernaar om elke patiënt een persoonlijke en hoogwaardige behandeling te bieden. Leer de gezichten achter de zorg kennen en ervaar de betrokkenheid van ons team bij het behoud van uw zicht en algemene ooggezondheid."</p>
        
        @foreach(var team in team)
        {
            <div class="flex flex-col space-y-2 pt-10 w-full">
            <h1 class="text-xl font-bold">@team.Key</h1>
                <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-2 w-full">
                    @foreach (var staff in team.Value)
                    {
                        <div class="max-h-[350px]">
                            <TeamCard staff="@staff" />
                            
                        </div>
                    }
                </div>


            </div>
        }

        </div>

    </div>


