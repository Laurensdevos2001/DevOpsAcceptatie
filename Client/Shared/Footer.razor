@inherits Microsoft.AspNetCore.Components.ComponentBase

<div class="flex justify-center items-center min-h-[325px] w-full border-t-[1px] border-t-[#D1D1D1] bg-[#E3E3E3]">
    <div class="container mx-auto  px-20 flex justify-between items-start">
        <div class="flex flex-col space-y-2">
            <img src="logo_vision.png" class="w-[140px] " />
            <p class="w-[223px] text-[10px]">
                Helder zicht, Helder leven. <br/>
                Onze expertise, Jouw ogen
            </p>
            <p class="font-bold text-[14px]">Volg ons</p>
            <div class="flex space-x-3">
                <img class="cursor-pointer" src="facebook.png" />
                <img class="cursor-pointer" src="twitter.png" />
                <img class="cursor-pointer" src="linkedin.png" />
                <img class="cursor-pointer" src="instagram.png" />
            </div>
        </div>
        <div class="flex truncate space-x-14 items-start">
            <div class="container flex flex-col">
                <p class="font-bold text-[14px] text-[#00284F]">Handige links</p>
                <a class="hover:underline text-[12px]" href="/">Home</a>
                <a class="hover:underline text-[12px]" href="/team">Team</a>
                <a class="hover:underline text-[12px]" href="/nieuws">Nieuws</a>
